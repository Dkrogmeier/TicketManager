@{
    ViewData["Title"] = "Home Page";
    ViewData["Repair"] = "7";
    ViewData["Inspections"] = "12";
    ViewData["Preventative"] = "14";
}

<div class="text-center bg-text">
    @*<img src ="/Images/well-organized-garage-tool-setup.jpg" class="cover"/>*@
    <h1 class="display-5">Welcome</h1>
    <h1 class="display-5">to</h1>
    <h1 class="display-4">-TICKETMANAGER-</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p> The time on the server is @DateTime.Now</p>
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a asp-controller="Tickets" asp-action="Index">Inspections</a>
            <span class="badge badge-primary badge-pill">@ViewData["Inspections"]</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a asp-controller="Tickets" asp-action="Index">Repair</a>
            <span class="badge badge-primary badge-pill">@ViewData["Repair"]</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a asp-controller="Tickets" asp-action="Index">Preventative</a>
            <span class="badge badge-primary badge-pill">@ViewData["Preventative"]</span>
        </li>
    </ul>
</div>


